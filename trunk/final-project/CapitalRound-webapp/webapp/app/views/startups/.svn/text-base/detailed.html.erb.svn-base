<%= render 'teaser', :id => params[:id] %>
 
<%= render 'startupnav', :id => params[:id] %> 


<div id="content-left">
	<div id="teaser-text">
		<% if session[:id] != nil %>
			<% for companydescription in @companydescriptions %>
				<h1> <%= Allfield.find(companydescription.allfield_id).field_name %> </h1>
   	     		<p> <%= simple_format h companydescription.content %> </p>
			<% end %>
		<% else %>
			<% for companydescription in @companydescriptions %>
              <% if Allfield.find(companydescription.allfield_id).view_flag == 1  %>
				<h1> <%= Allfield.find(companydescription.allfield_id).field_name %> </h1>
   	     		<p> <%= simple_format h companydescription.content %> </p>
              <% end %>
              <p>Detailed information is accessible only to registered users</p>
			<% end %>
		<% end %>
    </div>
    
    <% if session[:id] == nil %>
    	<p> To learn more about this company please <%= link_to 'Login', :controller => 'authentications', :action => 'checklogin', :gotocontroller => 'startups' , :gotoaction => 'detailed' , :id => params[:id] %></p>	
	<% end %>
    
</div>
 
 
 
 <div id="content-right">   
    <div id="teaser-charts">
        <img src="/images/raw/company3-chart1.png" />
        <img src="/images/raw/company3-chart2.png" />
        <img src="/images/raw/company3-chart3.png" />        
    </div>
 </div>