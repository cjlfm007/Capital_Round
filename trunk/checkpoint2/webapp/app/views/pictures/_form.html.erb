<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% hidden_field_tag 'title', params[:title] %>

 <fieldset>
    <legend>Avatar</legend>
    <p>
      <%= image_tag(@picture.avatar_url(:thumb)) if @picture.avatar? %>
      <% unless @picture.new_record? %>
        <%= f.check_box :remove_avatar %>
        <%= f.label :remove_avatar, "remove avatar" %>
      <% end %>
    </p>
    <p>
      <%= f.label :avatar, "Upload local file:" %><br />
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </p>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

