@import "bootstrap";

/* mixins, variables, etc. */

$grayMediumLight: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

/* universal */

html {
  overflow-y: scroll;
}

body {
//padding-top: 60px;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
  font-family: "Microsoft YaHei";

}

h2 {
  font-size: 1.7em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: #999;
  font-family: "Microsoft YaHei";
}



p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.5em;
  font-family: Verdana;
  //color: #fff;
  //text-transform: uppercase;
  letter-spacing: -2px;
  //padding-top: 11px;
  font-weight: bold;
  line-height: 1;
}

#logo:hover {
  //color: #fff;
  text-decoration: none;
}

header{
  label{
    // letter-spacing: 1px;
    font-family: 'Comic sans MS';
    font-size: 1.2em;
    text-align: right ;
    padding-right: 30px;
    padding-top: 20px;
    margin-bottom: 1px;
    margin-top: 30px;
  }

  h4 {
    letter-spacing: 1px;
    margin-bottom: 30px;
    text-align: center;
    font-family: "Microsoft YaHei";

  }
}

/* navbar */
.navbar{
  ul.nav.pull-right{
    margin-top: 4px;
  }
  li{
    font-size: 1em;
    font-family: "Microsoft YaHei";
  }
}

/* sidebar */
ul.breadcrumb{
 font-family: 'Ubuntu', Tahoma, sans-serif     ;
}
/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid $grayMediumLight;
  color: $grayLight;
  a {
    color: $gray;
    &:hover {
      color: $grayDarker;
    }
  }
  small {
    text-align:center;
  }
  .suroundmenu{

    list-style:none;
    text-align:center;

  }
  .menu{
    line-height:15px; 
    list-style: none;
    text-align:center;
    padding-top:5px; 
    margin:auto;
    
    .limenu {
      width:30px; 
      text-align:center;
      line-height:5px;
      margin:5px;
      display:inline;
    }
  }
}

/* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  padding: 10px;
  height: auto !important;
  margin-bottom: 15px;
  @include box_sizing;
}

#error_explanation {
  color: #f00;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  @extend .control-group;
  @extend .error;
}

/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}
/* users index */

.users {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-top: 1px solid $grayLighter;
    &:last-child {
      border-bottom: 1px solid $grayLighter;
    }
  }
}

/* Jumbotrons
-------------------------------------------------- */
.jumbotron {
  position: relative;
}
.jumbotron h1 {
  margin-left: 15px;

}
