<%= form_for(@campaign) do |f| %>


    <% if @campaign.errors[:goal_sum].length > 0 %>
        <div class="field">
          <h4><font color = 'red'>Goal*</font></h4>
          <div class="input-prepend input-append" style="color:red">
            <span class="add-on">$</span>
            <%= f.text_field :goal_sum ,:style => "border-color:red" %>

          </div>
        </div>
    <%else%>
        <div class="field">
          <h4>Goal*</h4>
          <div class="input-prepend input-append">
            <span class="add-on">$</span>
            <%= f.text_field :goal_sum%>

          </div>
        </div>
    <%end%>
    <br />
    <% if @campaign.errors[:valuation_sum].length > 0 %>
        <div class="field">
        <h4><font color = 'red'>Valuation of the startup*</font></h4>
        <div class="input-prepend input-append" style="color:red">
          <span class="add-on"><font color = 'red'>$</font></span>
          <%= f.text_field :valuation_sum,:style => "border-color:red" %>
        </div>
        </div>
    <%else%>
        <h4>Valuation of the startup*</h4>
        <div class="input-prepend input-append">
          <span class="add-on">$</span>
          <%= f.text_field :valuation_sum %>
        </div>
    <%end%>
    <br />
    <% if @campaign.errors[:closing_date].length > 0 %>
    <div class="field">
      <h4><font color = 'red'>Closing date*</font></h4>

      <%= f.date_select :closing_date,:style => "border-color:red" %>
    </div>
        <%else%>
        <div class="field">
          <h4>Closing date*</h4>
          <div class="input-append date" id="dp3" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
  <input class="span2" size="16" type="text" value="12-02-2012">
  <span class="add-on"><i class="icon-calendar"></i></span>
</div>
         <!-- <%= f.date_select :closing_date %>-->
        </div>
     <%end%>

    </br>
    <p>* - requred fields </p>

    <%= hidden_field_tag 'nextstep', 'exit' %>

    <%= link_to do %>
        <button id="next-company" class="btn btn-primary">
          <p>Save and Continue</p>
        </button>

    <% end %>
    <%= link_to(:controller => 'startups', :action => 'show', :id => session[:startup_id]) do %>
        <button type="button" class="btn">Cancel</button>
    <% end %>
<% end %>

