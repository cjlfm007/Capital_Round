        <div id="teaser-image" style="float:left">
            <% if @startup.avatar? %>
                <%= image_tag @startup.avatar.url(:thumb), :class => "img-rounded"  %>
            <% else %>
                <img src='/images/profile/Nostartupimage' class="img-rounded" />
            <% end %>

          <div id="image_update">
            <button class="btn btn-mini" onClick="MM_changeProp('image_form','','visibility','visible','DIV'); MM_changeProp('image_update','','visibility','hidden','DIV')">
              Update Photo
            </button>
          </div>
            <div id="image_form" style="visibility:hidden">
                <%= form_for(@startup) do |f| %>
                    <p><%= f.file_field :avatar%> <br>
