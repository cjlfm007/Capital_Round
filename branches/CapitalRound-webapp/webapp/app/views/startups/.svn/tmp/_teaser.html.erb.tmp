        <div id="teaser-pitch-text">
            <h2><%= @startup.name %></h2>
            <h3><a href="http://<%= @startup.link %>" class="teaser-link-border" style="color:#FFFFFF"><%= @startup.link %></a></h3>
            <p><%= simple_format h @startup.pitch %></p>
            <% if session[:connection_type]==2 %>
                <%= link_to(edit_startup_path(@startup)) do %>
