

<div class="teaser">
        <div class="teaser-info">
        	<% if @startup.Campaign != nil %>
            	<p> Goal: <%= number_to_currency(@startup.Campaign.goal_sum, :precision => 0) %> </p>
            <% else %>
            	<p> Goal: N/A </p>
            <% end %>

          <% if @startup.Campaign != nil %>
              <p> Valuation: <%= number_to_currency(@startup.Campaign.valuation_sum, :precision => 0) %> </p>
          <% else %>
              <p> Valuation: N/A </p>
          <% end %>

            <% if @startup.Campaign != nil %>
            	<p> Raised: <%= number_to_currency(@startup.Campaign.raised_sum , :precision => 0) %> </p>
            <% else %>
            	<p> Raised: N/A </p>
            <% end %>
            
            <% if @startup.Campaign != nil %>
            	<p> Closing date: <%= @startup.Campaign.closing_date.strftime('%m/%d/%Y') %> </p>
            <% else %>
            	<p> Closing date: N/A </p>
            <% end %>

			
